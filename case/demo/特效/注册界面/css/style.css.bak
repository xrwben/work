*{margin:0;padding:0;}
body{
	background:url("../images/bg.jpg")no-repeat top center;
	background-size:150%;
	color:#fff;
	font-family:"微软雅黑";
	}
.box{
	width:300px;
	border-radius:10px;
	background:rgba(0,0,0,0.5);
	box-shadow:2px 2px 10px #fff;
	padding:20px;
	position:absolute;
	top:100px;
	left:35%;
	-moz-transform-style:preserve-3D;
	-moz-perspective:3500px;
	-moz-transform:rotateX(60deg) rotateZ(-50deg);
	-moz-transition:all 1s;
	-webkit-transform-style:preserve-3D;
	
	-webkit-transform:rotateX(60deg) rotateZ(-50deg) rotateY(10deg);
	-webkit-transition:all 1s;
	}
.box:hover{-moz-transform:rotateX(0deg) rotateZ(0deg);-webkit-transform:rotateX(0deg) rotateZ(0deg);}
.register span.zc{
	font-size:30px;
	float:left;
	}
.register a{
	display:block;
	float:right;
	width:25px;
	height:25px;
	border:1px solid #fff;
	border-radius:50%;
	font-size:18px;
	line-height:25px;
	text-align:center;
	margin-top:10px;
	}
.info{
	margin-top:10px;
	line-height:60px;
	}
.info b{
	display:inline-block;
	width:70px;
	}
.info input{
	width:220px;
	height:35px;
	border:none;
	opacity:0.6;
	color:#000;
	font-size:14px;
	text-indent:8px;
	}
.box ul{margin-top:15px;}
.box ul li{
	list-style:none;
	float:left;
	width:73px;
	border:1px solid #ddd;
	font-size:14px;
	text-align:center;
	border-radius:5px;
	}
.yzm{
	width:50%;
	height:30px;
	margin-top:15px;
	opacity:0.6;
	padding-left:10px;
	color:#aaa;
	}
.reg{
	margin-top:15px;
	width:100%;
	height:35px;
	border:0;
	background:#1f1f1f;
	color:#fff;
	font-size:18px;
	}